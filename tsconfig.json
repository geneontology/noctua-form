{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@noctua": [
        "@noctua/"
      ],
      "@noctua.common": [
        "@noctua.common"
      ],
      "@noctua.curie": [
        "@noctua.curie/"
      ],
      "@noctua.sparql": [
        "@noctua.sparql/"
      ],
      "@noctua.search": [
        "@noctua.search/"
      ]
    },
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
